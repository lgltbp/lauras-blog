---
import Layout from "@/layouts/Layout.astro";
import Navbar from "@/components/Navbar.astro";
import ContentBanner from "@/components/ContentBanner.astro";
import { getTranslation, languages } from "@/i18n/translations";

export function getStaticPaths() {
  return languages.map((lang) => ({
    params: { lang },
    props: { lang },
  }));
}

const { lang } = Astro.props;
const t = getTranslation(lang);
---

<Layout title={t.welcome} lang={lang} description={t.homeDescription}>
  <Navbar lang={lang} />
  <ContentBanner title={t.welcome}>
    <div class="prose max-w-none">
      <p class="mb-4">{t.homeIntro}</p>
      <p class="mb-4">{t.homeResearch}</p>
      <p class="mb-4">{t.homeWork}</p>
    </div>
  </ContentBanner>
</Layout>
