---
import Layout from "@/layouts/Layout.astro";
import Navbar from "@/components/Navbar.astro";
import ContentBanner from "@/components/ContentBanner.astro";
import { getTranslation, languages } from "@/i18n/translations";
import { Image } from "astro:assets";
import profilePic from "@/assets/layout/profile_pic.jpg";

export function getStaticPaths() {
  return languages.map((lang) => ({
    params: { lang },
    props: { lang },
  }));
}

const { lang } = Astro.props;
const t = getTranslation(lang);
---

<Layout title={t.welcome} lang={lang} description={t.homeDescription}>
  <Navbar lang={lang} />
  <ContentBanner title={t.welcome}>
    <div class="flex flex-col md:flex-row gap-6">
      <div class="flex-shrink-0 mx-auto md:mx-0">
        <Image src={profilePic} alt="" class="rounded-lg w-70 h-auto" />
      </div>
      <div class="prose max-w-none">
        <p class="mb-4">{t.homeIntro}</p>
        <p class="mb-4">{t.homeResearch}</p>
        <p class="mb-4">{t.homeWork}</p>
      </div>
    </div>
  </ContentBanner>
</Layout>
