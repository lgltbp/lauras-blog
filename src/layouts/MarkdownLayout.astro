---
import Layout from "./Layout.astro";
import { defaultLanguage } from "@/i18n/translations";

const { frontmatter } = Astro.props;
const lang = frontmatter.lang || defaultLanguage;
---

<Layout title={frontmatter.title} lang={lang}>
  <article class="prose max-w-none bg-base-100 rounded-2xl p-4">
    <slot />
  </article>
</Layout>
