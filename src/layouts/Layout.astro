---
import "@/styles/global.css";

interface Props {
  title?: string;
  lang?: string;
}

const { title = "Laura's Blog", lang = "en" } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <link href="/favicon.svg" rel="icon" type="image/svg+xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Libre+Bodoni:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&family=Raleway:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&display=swap"
      rel="stylesheet"
    />
    <meta content={Astro.generator} name="generator" />
    <meta name="robots" content="noindex, nofollow" />
    <title>{title}</title>
  </head>
  <body class="bg-base-200 min-h-screen flex flex-col items-center">
    <div class="container p-4 max-w-4xl flex flex-col gap-4">
      <slot />
    </div>
  </body>
</html>
